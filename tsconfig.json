{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "typechain"],
  "include": [
    "@types/**/*",
    "artifacts/**/*",
    "artifacts/**/*.json",
    "dev-utils/**/*",
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "hardhat.config.ts"
  ]
}
